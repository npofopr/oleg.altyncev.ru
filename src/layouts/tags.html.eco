---
layout: 'defaultpost'
---
<div class="span12">
	<h2 style="margin: 10px 0 25px;">Страницы с тегом: '<%= @document.tag %>'</h2>

	<ul class="list_tags">
	<% for doc in @getCollection('posts').findAll({tags: '$in': @document.tag}).toJSON(): %>
	    <li><a href="<%= doc.url %>"><%= doc.title %></a></li>
	<% end %>
	</ul>
</div>